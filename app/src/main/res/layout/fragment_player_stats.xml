<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/stats_bg_landscape"
    android:padding="16dp">

    <!-- Базовая информация -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/playerNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aragorn"
            android:textSize="28sp"
            android:textColor="@color/primary_gold"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/playerClassText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 3 Warrior"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/playerImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/warrior_detail"
            android:layout_marginBottom="16dp" />

        <!-- Статы -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_panel"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HP: 45/50"
                    android:textSize="14sp"
                    android:textColor="@color/accent_green"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/acText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AC: 16"
                    android:textSize="14sp"
                    android:textColor="@color/accent_blue"
                    android:gravity="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/xpText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="XP: 450/1000"
                android:textSize="14sp"
                android:textColor="@color/primary_gold"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Детальные характеристики -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attributes and Skills"
            android:textSize="22sp"
            android:textColor="@color/primary_gold"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_panel"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Атрибуты -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attributes"
                    android:textSize="18sp"
                    android:textColor="@color/primary_gold"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/strengthText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Strength: 16 (+3)"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/dexterityText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dexterity: 12 (+1)"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/constitutionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Constitution: 14 (+2)"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/intelligenceText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intelligence: 10 (+0)"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/wisdomText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wisdom: 8 (-1)"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/charismaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Charisma: 13 (+1)"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Навыки -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skills"
                    android:textSize="18sp"
                    android:textColor="@color/primary_gold"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/skillsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Athletics: +5\nIntimidation: +3\nSurvival: +1"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Back to Game"
            android:textSize="18sp"
            style="@style/SecondaryButton" />

    </LinearLayout>

</LinearLayout>