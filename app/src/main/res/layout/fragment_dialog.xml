<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/dialog_bg_landscape"
    android:padding="16dp">

    <!-- Персонаж -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/speakerImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hermit_character"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/speakerNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Old Hermit"
            android:textSize="24sp"
            android:textColor="@color/primary_gold"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/rounded_panel" />

    </LinearLayout>

    <!-- Диалог и выборы -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:paddingStart="16px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialogue"
            android:textSize="22sp"
            android:textColor="@color/primary_gold"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_panel"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/dialogText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travelers! I've been expecting you. The forest is dangerous these days. Bandits have taken over the ancient ruins. What brings you to these parts?"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:lineSpacingExtra="6dp" />

        </ScrollView>

        <!-- Варианты ответов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/choice1Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="We're here to help the merchant"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                style="@style/SecondaryButton" />

            <Button
                android:id="@+id/choice2Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="We seek ancient knowledge"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                style="@style/SecondaryButton" />

            <Button
                android:id="@+id/choice3Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="None of your business, old man"
                android:textSize="16sp"
                style="@style/SecondaryButton" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>