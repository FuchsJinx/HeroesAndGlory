<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/skillNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skill Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/skillDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Skill description here"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/skillCostText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cost: 5 MP"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/skillTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ATTACK"
                android:textSize="10sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:background="@drawable/skill_type_background" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>